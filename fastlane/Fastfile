# Customise this file, documentation can be found here:
# https://github.com/KrauseFx/fastlane/tree/master/docs
# vi: ft=ruby

$:.unshift File.dirname(__FILE__)
require 'lib/utils.rb'

fastlane_version "1.3"

default_platform :ios

platform :ios do
  before_all do
     ENV['DELIVER_WHAT_TO_TEST'] = git_commit_log
     ensure_git_status_clean
     export_apple_id lane_context[SharedValues::LANE_NAME]
  end

  desc "Runs linting (and eventually static analysis)"
  lane :analyze do
    return if test_disabled?
    make 'lint'
  end

  desc "Runs unit tests, optionally generating a JUnit report."
  lane :verify do |options|
    args = [
      'GCC_INSTRUMENT_PROGRAM_FLOW_ARCS=YES',
      'GCC_GENERATE_TEST_COVERAGE_FILES=YES'
    ]
    if options[:junit] then
      args.concat ['-reporter junit:build/reports/unit-tests.xml', '-reporter pretty']
    end
    xctool :test, args.join(' ')
  end

  desc "Runs all the unit tests."
  lane :travis do
    verify
  end

  desc "Increment the app's build number and commit the changes."
  lane :bump do |options|
    opt_build_num = options[:build_number]
    if opt_build_num then
      increment_build_number(build_number: opt_build_num.to_i)
    else
      increment_build_number
    end
    commit_version_bump
    add_git_tag(tag: "#{get_version_number}.#{get_build_number}")
  end

  desc "Submit a new **Wikipedia Alpha** Build to Apple TestFlight"
  lane :alpha do
    verify(junit: true)

    # let jenkins specify build number until we figure out how to "store" it in git
    abort "Must specify BUILD_NUMBER enviroment variable!" unless ENV['BUILD_NUMBER']
    increment_build_number(build_number: ENV['BUILD_NUMBER'])

    sigh(
      adhoc: false,
      force: true,
      filename: 'build/alpha.mobileprovision'
    )
    ipa(
      configuration: "Alpha",
      scheme: "Wikipedia Alpha",
      embed: 'build/alpha.mobileprovision',
      # needed to override automatic profile selection
      xcargs: "PROVISIONING_PROFILE=#{Fastlane::Actions.lane_context[Fastlane::Actions::SharedValues::SIGH_UDID]}"
    )
    hockey(
      notes: git_commit_log,
      notify: '0', # Means do not notify
      status: '1', # Means do not make available for download
    )
    deliver beta: true
  end

  desc "Submit a new **Wikipedia Beta** build to Apple TestFlight"
  lane :beta do
    sigh(
      adhoc: false,
      force: true,
      filename: 'build/beta.mobileprovision'
    )
    ipa(
      configuration: "Beta",
      scheme: "Wikipedia Beta",
      embed: 'build/beta.mobileprovision',
      xcargs: "PROVISIONING_PROFILE=#{Fastlane::Actions.lane_context[Fastlane::Actions::SharedValues::SIGH_UDID]}"
    )
    hockey(
      notes: git_commit_log,
      notify: '0', # Means do not notify
      status: '1', # Means do not make available for download
    )
    deliver beta: true
  end

  desc "Upload a developer build to Hockey."
  lane :dev do
    sigh(
      adhoc: true,
      force: true,
      filename: 'build/dev.mobileprovision'
    )
    # force iTunes file sharing to be enabled (normally disabled for release builds)
    ENV['WMF_FORCE_ITUNES_FILE_SHARING'] = '1'
    # force debug menu to be shown
    ENV['WMF_FORCE_DEBUG_MENU'] = '1'
    xcargs= ["PROVISIONING_PROFILE=#{Fastlane::Actions.lane_context[Fastlane::Actions::SharedValues::SIGH_UDID]}"].join ' '
    ipa(
      configuration: "AdHoc",
      scheme: "Wikipedia AdHoc",
      embed: 'build/dev.mobileprovision',
      xcargs: xcargs
    )
    hockey(
      notes: git_commit_log,
      notify: '0', # Do not notify
      status: '2', # Make available for download
      release_type: '2' # 'alpha' release type
    )
  end


  desc "Upload AdHoc \"Release Candidate\" build to Hockey."
  lane :rc do
    sigh(
      adhoc: true,
      force: true,
      filename: 'build/adhoc.mobileprovision'
    )
    # force iTunes file sharing to be enabled (normally disabled for release builds)
    ENV['WMF_FORCE_ITUNES_FILE_SHARING'] = '1'
    # force debug menu to be shown
    ENV['WMF_FORCE_DEBUG_MENU'] = '1'
    ipa(
      configuration: "Release",
      scheme: "Wikipedia",
      embed: 'build/adhoc.mobileprovision',
      xcargs: "PROVISIONING_PROFILE=#{Fastlane::Actions.lane_context[Fastlane::Actions::SharedValues::SIGH_UDID]}"
    )
    hockey(
      notes: git_commit_log,
      notify: '0', # Do not notify
      status: '2', # Make available for download
      release_type: '0' # 'beta' release type
    )
  end

  desc "Upload AppStore build to iTC & HockeyApp"
  lane :store do
    sigh(
      adhoc: false,
      force: true,
      filename: 'build/release.mobileprovision'
    )
    ipa(
      configuration: "Release",
      scheme: "Wikipedia",
      embed: 'build/release.mobileprovision',
      xcargs: "PROVISIONING_PROFILE=#{Fastlane::Actions.lane_context[Fastlane::Actions::SharedValues::SIGH_UDID]}"
    )
    hockey(
      notes: git_commit_log,
      notify: '0', # Do not notify
      status: '1', # Do not make available for download
      release_type: '1' # 'store' release type
    )
    deliver force: true
  end

  after_all do |lane|

  end

  error do |lane, exception|

  end
end
